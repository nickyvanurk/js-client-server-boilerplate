{
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
  },
  "extends": [
    "eslint:recommended",
  ],
  "rules": {
    "no-console": "warn",
    "curly": "error",
    "quotes": ["error", "single"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "semi": "error"
  }
}

